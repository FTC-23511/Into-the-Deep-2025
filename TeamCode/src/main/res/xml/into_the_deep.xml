<Robot type="FirstInspires-FTC">
    <!-- Config for main 2024 Robot -->
    <LynxUsbDevice name="Control Hub Portal" serialNumber="(embedded)" parentModuleAddress="173">
        <LynxModule name="Control Hub" port="173">

            <Servo name="rightIntakePivot" port="1"/>
            <Servo name="leftIntakePivot" port="3"/>

            <goBILDA5202SeriesMotor name="extension" port="0"/>-->
            <goBILDA5202SeriesMotor name="intakeMotor" port="1"/>-->
            <goBILDA5202SeriesMotor name="liftBottom" port="2"/>-->
            <goBILDA5202SeriesMotor name="liftTop" port="3"/>-->

            <ControlHubImuBHI260AP name="imu" port="0" bus="0"/>
            <SparkFunOTOS2 name="sensor_otos" port="0" bus="1"/>
            <RevColorSensorV3 name="colorSensor" port="0" bus="2"/>

        </LynxModule>
    </LynxUsbDevice>
    
    <LynxUsbDevice name="Expansion Hub Portal 1" serialNumber="DQ81D9BF" parentModuleAddress="2">
        <LynxModule name="Expansion Hub 2" port="2">

            <goBILDA5202SeriesMotor name="FR" port="0"/>
            <goBILDA5202SeriesMotor name="BR" port="1"/>
            <goBILDA5202SeriesMotor name="BL" port="2"/>
            <goBILDA5202SeriesMotor name="FL" port="3"/>

            <Servo name="rightDepositPivot" port="1"/>
            <Servo name="leftDepositPivot" port="3"/>
            <Servo name="depositClaw" port="5"/>

        </LynxModule>
    </LynxUsbDevice>
</Robot>